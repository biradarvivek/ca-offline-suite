{
  "name": "cyphersol-ats-electron-app",
  "version": "1.0.3",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "start:fastapi": "cd ../backend && uvicorn app:app --reload --port 5000",
    "start:react": "cd react-app && npm start",
    "start:electron": "cross-env NODE_ENV=development wait-on http://localhost:3000 && electron main.js",
    "start-all": "cross-env NODE_ENV=development concurrently \"npm run start:fastapi\" \"npm run start:react\" \"npm run start:electron\"",
    "build": "npx rimraf dist && cross-env NODE_ENV=production npm run build:react && npm run build:electron",
    "build:react": "cd react-app && npm run build",
    "build:electron": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.1",
    "electron": "^33.3.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.electron.electronapp",
    "productName": "Cyphersol",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "Shama-Cyphersol",
      "repo": "ca-offline-suite"
    },
    "files": [
      "**/*",
      "react-app/build/**/*",
      "../backend/**/*",
      "env/**/*",
      "!react-app/build/static/js/*.map",
      "!react-app/node_modules",
      "!backend/__pycache__",
      "!env/bin/python3",
      "package.json",
      "media/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend",
        "filter": [
          "app*"
        ]
      },
      {
        "from": "media",
        "to": "media",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "pg": "^8.13.1",
    "python-shell": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
